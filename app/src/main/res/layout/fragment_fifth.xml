<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/gray_shadow"
    android:id="@+id/fragmentFifth">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp">


            <TextView
                android:text="تعديل البيانات"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textColor="?attr/colorButtonNormal"
                android:textSize="30sp"
                android:gravity="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="7"
                android:id="@+id/fistNameET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="start"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="الاسم الأول"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="7"
                android:id="@+id/lastNameET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="start"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="الاسم الإخير"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="البريد الإلكتروني"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordCurrentET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="end"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="كلمة المرور الحالية"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordCheckET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="end"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="كلمة المرور الجديدة"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="7"
                android:id="@+id/passwordET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="right"
                android:background="@android:drawable/editbox_background_normal"

                android:hint="تأكيد كلمة المرور"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPhonetic"
                android:ems="10"
                android:id="@+id/phoneET"
                android:textColorLink="?attr/colorButtonNormal"
                android:textColor="?attr/colorButtonNormal"
                android:gravity="start"
                android:background="@android:drawable/editbox_background_normal"
                android:hint="رقم الجوال"
                android:textColorHint="@android:color/darker_gray"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:id="@+id/datepickerB"
                    android:onClick="datePicker"
                    android:background="@drawable/calendar"
                    android:elevation="0dp"
                    android:gravity="right" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:ems="7"
                    android:id="@+id/datepickerET"
                    android:textColorLink="?attr/colorButtonNormal"
                    android:textColor="?attr/colorButtonNormal"
                    android:background="@android:drawable/editbox_background_normal"
                    android:gravity="start"
                    android:foregroundGravity="right"
                    android:layout_weight="1"
                    android:hint="تاريخ الميلاد"
                    android:textColorHint="@android:color/darker_gray"


                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

            </LinearLayout>


            <Button
                android:text="حفظ التغييرات"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registerB"
                android:background="@color/blue_button"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="Click"
                android:layout_marginBottom="30dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>