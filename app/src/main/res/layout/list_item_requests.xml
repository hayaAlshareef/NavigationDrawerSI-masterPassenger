<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/confirmRequestTV"
        android:paddingTop="10dp"
        android:background="@drawable/lablebackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.05">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar1"
                android:layout_column="1"
                />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/requestNumberRetrive"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:paddingRight="10dp"
                android:layout_column="1"
                android:gravity="right"
                />

            <TextView
                android:text="رقم الطلب:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/requiestNumberTV"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_column="2"/>

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:text="ادم علي"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DriverNameRetrive"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_column="1"
                android:gravity="right" />

            <TextView
                android:text="اسم السائق:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/DriverNameTV"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:clickable="false"
                android:layout_column="2" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickup"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_column="1"
                android:gravity="right"

                />

            <TextView
                android:text="الإنطلاق :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pickupAddTV"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"

                android:paddingLeft="10dp"
                android:layout_column="2"/>


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:text="جامعة الملك سعود"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropOffLRet"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_column="1"
                android:gravity="right"

                />

            <TextView
                android:text="الوجهة:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropOffLTV"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_column="2"/>


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:text="9 صباحا"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropOffTRet"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_column="1"
                android:gravity="right"
                />
            <TextView
                android:text="وقت الوصول:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dropOffTimeTV"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_column="2"/>


        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right">

            <TextView
                android:text="مقبول"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusRet"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_column="1"
                android:gravity="right"
                />

            <TextView
                android:text="حالة الطلب:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/statusTV"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:layout_column="2"/>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:gravity="center">


            <Button
                android:text="إلغاء الإشتراك"
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:id="@+id/unSubscribe"
                android:layout_column="1"
                android:textSize="17dp"
                android:background="@color/red_dark"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center" />

            <Button
                android:text="سأغيب "
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:id="@+id/absent"
                android:layout_column="2"
                android:layout_gravity="center"
                android:textSize="17dp"
                android:background="@color/green_dark"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"/>

        </TableRow>
    </TableLayout>

</LinearLayout>