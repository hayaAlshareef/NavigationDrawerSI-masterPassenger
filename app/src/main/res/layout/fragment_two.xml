<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentTwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_shadow"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="1dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="ابحث عن رحلة"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/startingDateTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="تاريخ البدء"
                    android:textColor="@color/cast_intro_overlay_background_color"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/datepickerB"
                        android:layout_width="40dp"
                        android:layout_height="31dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/calendar"
                        android:elevation="0dp"
                        android:gravity="right" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@android:color/darker_gray">

                        <EditText
                            android:id="@+id/StartingDateET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@android:drawable/editbox_background_normal"
                            android:ems="10"
                            android:foregroundGravity="right"
                            android:gravity="right"

                            android:inputType="textPersonName"
                            android:textColor="?attr/colorButtonNormal"
                            android:textColorHint="@android:color/darker_gray" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/endingDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="تاريخ الإنتهاء"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/datepickerB1"
                    android:layout_width="40dp"
                    android:layout_height="31dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/calendar"

                    android:gravity="right" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@android:color/darker_gray">

                    <EditText
                        android:id="@+id/endingDateTE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:foregroundGravity="right"
                        android:gravity="right"

                        android:inputType="textPersonName"
                        android:textColor="?attr/colorButtonNormal"
                        android:textColorHint="@android:color/darker_gray" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/pickupTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="مكان البدء"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="18sp" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@android:color/darker_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/pickupB"
                        android:layout_width="40dp"
                        android:layout_height="31dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/geo"
                        android:elevation="0dp"
                        android:gravity="right" />

                    <EditText
                        android:id="@+id/pickupET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:foregroundGravity="right"
                        android:gravity="right"

                        android:inputType="textPersonName"
                        android:textColor="?attr/colorButtonNormal"
                        android:textColorHint="@android:color/darker_gray" />
                </LinearLayout>
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:id="@+id/pickupAddTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="عنوان البدء"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/pickupAddET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:foregroundGravity="right"
                android:gravity="right"

                android:inputType="textPersonName"
                android:textColor="?attr/colorButtonNormal"
                android:textColorHint="@android:color/darker_gray" />


            <TextView
                android:id="@+id/dropoffTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="مكان الإنتهاء"
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="18sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@android:color/darker_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/dropoffB"
                        android:layout_width="40dp"
                        android:layout_height="31dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/geo"
                        android:elevation="0dp"
                        android:gravity="right" />

                    <EditText
                        android:id="@+id/dropOffLET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background_normal"
                        android:ems="10"
                        android:foregroundGravity="right"
                        android:gravity="right"

                        android:inputType="textPersonName"
                        android:textColor="?attr/colorButtonNormal"
                        android:textColorHint="@android:color/darker_gray" />
                </LinearLayout>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/dropoffAddTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="عنوان الانتهاء "
                android:textColor="@color/cast_intro_overlay_background_color"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/dropoffAddET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:drawable/editbox_background_normal"
                android:ems="10"
                android:foregroundGravity="right"
                android:gravity="right"

                android:inputType="textPersonName"
                android:textColor="?attr/colorButtonNormal"
                android:textColorHint="@android:color/darker_gray" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="وقت الوصول"
                    android:textColor="@color/cast_intro_overlay_background_color"
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="75dp">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerHour"
                            android:scrollbarSize="@dimen/activity_horizontal_margin"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            android:entries="@array/hours"
                            android:background="@android:drawable/btn_dropdown"
                            android:layout_marginRight="20dp" />

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:id="@+id/spinnerMint"
                            android:scrollbarSize="@dimen/activity_horizontal_margin"
                            android:textSize="18sp"
                            android:layout_marginTop="10dp"
                            android:entries="@array/mintSec"
                            android:background="@android:drawable/btn_dropdown" />


                    </LinearLayout>


            <Button
                android:id="@+id/searchb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/blue_button"
                android:onClick="userReg"
                android:text="بحث"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>