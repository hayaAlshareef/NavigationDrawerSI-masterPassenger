<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Navigationdrawersi" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_navigationdrawersi</item>
        <item name="popupMenuStyle">@style/PopupMenu.Navigationdrawersi</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Navigationdrawersi</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Navigationdrawersi</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Navigationdrawersi</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Navigationdrawersi</item>
        <item name="actionModeBackground">@drawable/cab_background_top_navigationdrawersi</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_navigationdrawersi</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Navigationdrawersi</item>

                <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Navigationdrawersi.Widget</item>

    </style>

    <style name="ActionBar.Solid.Navigationdrawersi" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_navigationdrawersi</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_navigationdrawersi</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_navigationdrawersi</item>
        <item name="progressBarStyle">@style/ProgressBar.Navigationdrawersi</item>
    </style>

    <style name="ActionBar.Transparent.Navigationdrawersi" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_navigationdrawersi</item>
        <item name="progressBarStyle">@style/ProgressBar.Navigationdrawersi</item>
    </style>
	
    <style name="PopupMenu.Navigationdrawersi" parent="@style/Widget.AppCompat.PopupMenu">	
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_navigationdrawersi</item>	
    </style>
	
    <style name="DropDownListView.Navigationdrawersi" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_navigationdrawersi</item>
    </style>

    <style name="ActionBarTabStyle.Navigationdrawersi" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_navigationdrawersi</item>
    </style>
	
    <style name="DropDownNav.Navigationdrawersi" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_navigationdrawersi</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_navigationdrawersi</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_navigationdrawersi</item>
    </style>
    
    <style name="ProgressBar.Navigationdrawersi" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_navigationdrawersi</item>
    </style>
    
    <style name="ActionButton.CloseMode.Navigationdrawersi" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_navigationdrawersi</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Navigationdrawersi.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Navigationdrawersi</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Navigationdrawersi</item>
    </style>

</resources>