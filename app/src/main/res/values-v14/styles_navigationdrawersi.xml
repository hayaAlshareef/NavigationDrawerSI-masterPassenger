<?xml version="1.0" encoding="utf-8"?>


<resources>

    <style name="Theme.Navigationdrawersi" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_navigationdrawersi</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Navigationdrawersi</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Navigationdrawersi</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Navigationdrawersi</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Navigationdrawersi</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Navigationdrawersi</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_navigationdrawersi</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_navigationdrawersi</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Navigationdrawersi</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Navigationdrawersi.Widget</item>

    </style>

    <style name="ActionBar.Solid.Navigationdrawersi" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_navigationdrawersi</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_navigationdrawersi</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_navigationdrawersi</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Navigationdrawersi</item>
    </style>

    <style name="ActionBar.Transparent.Navigationdrawersi" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/ab_transparent_navigationdrawersi</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Navigationdrawersi</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Navigationdrawersi.Widget" parent="@style/Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/PopupMenu.Navigationdrawersi</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Navigationdrawersi</item>
    </style>

</resources>